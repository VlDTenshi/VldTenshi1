<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="MVVM.Views.FriendPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry Text="{Binding Name}" Placeholder="Nimi" FontSize="Medium"/>
            <Entry Text="{Binding Email}" Placeholder="Email" FontSize="Medium"/>
            <Entry Text="{Binding Phone}" Placeholder="Tel" FontSize="Medium"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <Button
                Text="Lisa"
                Command="{Binding ListViewModel.SaveFriendCommand}"
                CommandParameter="{Binding}"
                />
            <Button
                Text="Kustuta"
                Command="{Binding ListViewModel.DeleteFriendCommand}"
                CommandParameter="{Binding}"
                />
            <Button
                Text="Tagasi"
                Command="{Binding ListViewModel.BackCommand}"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>